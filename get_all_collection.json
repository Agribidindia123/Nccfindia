    {
      "test_id": "TC-003",
      "description": "Security - Unauthorized request (missing/invalid token)",
      "auth_token": null,
      "method": "GET",
      "endpoint": "/collection_center",
      "query_params": {
        "limit": 50,
        "offset": 0
      },
      "expected_status": 401,
      "expected_response": {
        "detail": "Missing or invalid Authorization header"
      }
    },
