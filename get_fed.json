{
  "base_url": "https://uat-api.nccfindia.com",
  "method": "GET",
  "headers": {
    "Content-Type": "application/json",
    "Accept": "application/json"
  },
  "tokens": {
    "valid": "iXd32fC8Dv",
    "invalid": "invalid123",
    "expired": "expired_token_example",
    "malformed": "malformed@@token",
    "empty": "",
    "valid_id": "<replace_with_id_token_here>",
    "invalid_id": "<replace_with_id_token_here>",
    "expired_id": "<replace_with_id_token_here>",
    "malformed_id": "<replace_with_id_token_here>"
  },
  "test_cases": [
    {
      "test_id": "FEDAG-001",
      "description": "Positive - Fetch all FED agencies without filter (aggregator_status not provided)",
      "category": "Positive / Data Retrieval",
      "endpoint": "/fed-agency/get_fed_agency",
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response_contains": [
        "Fetched",
        "aggregator_name"
      ]
    },
    {
      "test_id": "FEDAG-002",
      "description": "Positive - Fetch agencies filtered by aggregator_status=ACTIVE",
      "category": "Positive / Filter Parameter",
      "endpoint": "/fed-agency/get_fed_agency?aggregator_status=1",
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response_contains": [
        "Fetched",
        "status"
      ]
    },
    {
      "test_id": "FEDAG-003",
      "description": "Negative - Invalid aggregator_status value",
      "category": "Negative / Input Validation",
      "endpoint": "/fed-agency/get_fed_agency?aggregator_status=@@@###",
      "auth_token": "valid",
      "expected_status": 422,
      "expected_error_message_substring": "Invalid aggregator_status"
    },
    {
      "test_id": "FEDAG-004",
      "description": "Boundary - Very long aggregator_status parameter (100 characters)",
      "category": "Boundary / Input Validation",
      "endpoint": "/fed-agency/get_fed_agency?aggregator_status=AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA",
      "auth_token": "valid",
      "expected_status": 422,
      "expected_error_message_substring": "Validation failed"
    },
    {
      "test_id": "FEDAG-005",
      "description": "Negative - Missing Authorization token",
      "category": "Negative / Authentication",
      "endpoint": "/fed-agency/get_fed_agency",
      "auth_token": "empty",
      "expected_status": 401,
      "expected_error_message_substring": "Missing or invalid Authorization"
    },
    {
      "test_id": "FEDAG-006",
      "description": "Negative - Invalid Authorization token",
      "category": "Negative / Authentication",
      "endpoint": "/fed-agency/get_fed_agency",
      "auth_token": "invalid",
      "expected_status": 401,
      "expected_error_message_substring": "Invalid token"
    },
    {
      "test_id": "FEDAG-007",
      "description": "Negative - Expired Authorization token",
      "category": "Negative / Authentication",
      "endpoint": "/fed-agency/get_fed_agency",
      "auth_token": "expired",
      "expected_status": 401,
      "expected_error_message_substring": "Token expired"
    },
    {
      "test_id": "FEDAG-008",
      "description": "Negative - Malformed Authorization token",
      "category": "Negative / Authentication",
      "endpoint": "/fed-agency/get_fed_agency",
      "auth_token": "malformed",
      "expected_status": 401,
      "expected_error_message_substring": "Invalid token"
    },
    {
      "test_id": "FEDAG-009",
      "description": "Negative - Non-existing aggregator_status parameter (e.g., UNKNOWN)",
      "category": "Negative / Data Validation",
      "endpoint": "/fed-agency/get_fed_agency?aggregator_status=3",
      "auth_token": "valid",
      "expected_status": 404,
      "expected_error_message_substring": "No records found"
    },
    {
      "test_id": "FEDAG-010",
      "description": "Negative - Malformed URL path",
      "category": "Negative / Malformed Request",
      "endpoint": "/fed-agency/get_fed_agency///",
      "auth_token": "valid",
      "expected_status": 400,
      "expected_error_message_substring": "Bad request"
    }
  ]
}