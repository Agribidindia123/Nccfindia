{
  "base_url": "https://uat-api.nccfindia.com",
  "method": "GET",
  "headers": {
    "Content-Type": "application/json"
  },
  "tokens": {
    "valid": "<fetched_from_login_api>",
    "expired": "expired_token_example",
    "invalid": "invalid123",
    "malformed": "malformed!@#token",
    "empty": "",
    "valid_id": "<fetched_from_login_api>",
    "expired_id": "<replace_with_id_token_here>",
    "invalid_id": "<replace_with_id_token_here>",
    "malformed_id": "<replace_with_id_token_here>",
    "valid_id_id": "<replace_with_id_token_here>",
    "expired_id_id": "<replace_with_id_token_here>",
    "invalid_id_id": "<replace_with_id_token_here>",
    "malformed_id_id": "<replace_with_id_token_here>",
    "valid_admin": "<fetched_admin_token>",
    "valid_aggregator": "<fetched_aggregator_token>",
    "valid_branch": "<fetched_branch_token>"
  },
  "test_cases": [
    {
      "test_id": "TC-001",
      "description": "Positive - Retrieve a yield by valid yield_id",
      "category": "Positive | Functional | CRUD",
      "endpoint": "/yield/get_yield/9aa11ccb-1bcc-4d7c-ba62-12e2e892807f",
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response_contains": [
        "Yield retrieved successfully",
        "yield_id",
        "quantity_per_hectare_in_qtl",
        "crop_year_id"
      ]
    },
    {
      "test_id": "TC-002",
      "description": "Negative - No token provided",
      "category": "Negative | Authorization",
      "endpoint": "/yield/get_yield/9aa11ccb-1bcc-4d7c-ba62-12e2e892807f",
      "auth_token": "empty",
      "expected_status": 401,
      "expected_error_message_substring": "Missing or invalid Authorization"
    },
    {
      "test_id": "TC-003",
      "description": "Negative - Expired token",
      "category": "Negative | Authentication",
      "endpoint": "/yield/get_yield/9aa11ccb-1bcc-4d7c-ba62-12e2e892807f",
      "auth_token": "expired",
      "expected_status": 401,
      "expected_error_message_substring": "Token expired"
    },
    {
      "test_id": "TC-004",
      "description": "Negative - Malformed token",
      "category": "Negative | Authentication",
      "endpoint": "/yield/get_yield/9aa11ccb-1bcc-4d7c-ba62-12e2e892807f",
      "auth_token": "malformed",
      "expected_status": 401,
      "expected_error_message_substring": "Invalid token"
    },
    {
      "test_id": "TC-005",
      "description": "Negative - Invalid yield_id",
      "category": "Negative | Data Validation",
      "endpoint": "/yield/get_yield/00000000-0000-0000-0000-000000000000",
      "auth_token": "valid",
      "expected_status": 404,
      "expected_error_message_substring": "Yield not found"
    },
    {
      "test_id": "TC-006",
      "description": "Admin user retrieves yield by ID",
      "category": "Positive / Authorization",
      "endpoint": "/yield/get_yield/9aa11ccb-1bcc-4d7c-ba62-12e2e892807f",
      "auth_token": "valid_admin",
      "expected_status": 200
    },
    {
      "test_id": "TC-007",
      "description": "Aggregator tries to access restricted yield by ID",
      "category": "Negative / Authorization",
      "endpoint": "/yield/get_yield/9aa11ccb-1bcc-4d7c-ba62-12e2e892807f",
      "auth_token": "valid_aggregator",
      "expected_status": 403
    },
    {
      "test_id": "TC-008",
      "description": "Branch tries to access restricted yield by ID",
      "category": "Negative / Authorization",
      "endpoint": "/yield/get_yield/9aa11ccb-1bcc-4d7c-ba62-12e2e892807f",
      "auth_token": "valid_branch",
      "expected_status": 403
    }
  ]
}
