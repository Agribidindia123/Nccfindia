      "description": "Retrieve NCCF users with valid page number and page size",
      "method": "GET",
      "endpoint": "/nccf_user/get_all_nccf_users",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {auth_token}"
      },
      "query_params": {
        "page": 1,
        "page_size": 10
      },
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response": {
        "mandatory_fields": [
          "aggregator_name",
          "aggregator_id",
          "aggregator_code",
          "email_id",
          "mobile_number",
          "city_master_id",
          "state_master_id",
          "city_name",
          "state_name"
        ],
        "schema_validation": "pass"
      }
    },
    {
