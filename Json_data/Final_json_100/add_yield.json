    "invalid": "invalid123",
    "expired": "eyJraWQiOiJKdFVvVndkMFdvTE5MaXFVQmVvK0xESE5DSjIrdDBCdHVIQk9NeFwvUDRDYz0iLCJhbGciOiJSUzI1NiJ9..QVxFFIuor_gPAUCTFBnNAvcF-xNMJs1alEA4y5cERKsYG9MYRd3fUtfVMXk16Ix-luNz5rTHMI34qz64R_JDpkOodQN1yRyyYmuNE0OeMlY2DMC-lU1QEQUeZQ6pnAaPjQiOQ-tjubCrsXX2kDglOxF8DbkIQbhkc_hQ_aJOx867oHHeR3nFDZgy7NngseRw7MpoQRqIGxXi-oWXRWPkK3WhaouHwoznvlLrJ28DcPiUf69dLQiU3laxjVd0j8OpIWvW_4Mmcu3-nt5BOlAAprVtl-pVUWNv7CdERVxFNy64-xJA--G1YHcAcLjcIpvIGq-5J1rbNl7HuMUzFqMPBQ",
    "malformed": "malformed!@#token",
    "empty": "",

    "valid_admin": "<fetched_admin_token>",
    "valid_branch": "<fetched_branch_token>",
    "valid_aggregator": "<fetched_aggregator_token>",

    "valid_id": "<fetched_id_token>",
    "invalid_id": "invalidIdToken123",
    "expired_id": "<expired_id_token_here>",
    "malformed_id": "bad.id.token"
  },

  "test_cases": [
    {
      "test_id": "TC-001",
      "description": "Positive - Add yield with valid token",
      "category": "Positive | Functional | CRUD",
      "endpoint": "/yield/add_yield",
      "auth_token": "valid",
      "body": {
        "quantity_per_hectare_in_qtl": 1,
        "crop_year_id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
        "added_by": "user"
      },
      "expected_status": 200,
      "expected_response_contains": [
        "Yield added successfully"
      ]
    },
    {
      "test_id": "TC-002",
      "description": "Negative - No token provided",
      "category": "Negative | Authorization",
      "endpoint": "/yield/add_yield",
      "auth_token": "empty",
      "body": {
        "quantity_per_hectare_in_qtl": 1,
        "crop_year_id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
        "added_by": "user"
      },
      "expected_status": 401,
      "expected_error_message_substring": "Missing or invalid Authorization"
    },
    {
      "test_id": "TC-003",
      "description": "Negative - Invalid token",
      "category": "Negative | Authentication",
      "endpoint": "/yield/add_yield",
      "auth_token": "invalid",
      "body": {
        "quantity_per_hectare_in_qtl": 1,
        "crop_year_id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
        "added_by": "user"
      },
      "expected_status": 401,
      "expected_error_message_substring": "Invalid token"
    },
    {
      "test_id": "TC-004",
      "description": "Negative - Expired token",
      "category": "Negative | Authentication",
      "endpoint": "/yield/add_yield",
      "auth_token": "expired",
      "body": {
        "quantity_per_hectare_in_qtl": 1,
        "crop_year_id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
        "added_by": "user"
      },
      "expected_status": 401,
      "expected_error_message_substring": "Token expired"
    },
    {
      "test_id": "TC-005",
      "description": "Negative - Malformed token",
      "category": "Negative | Security | Token Validation",
      "endpoint": "/yield/add_yield",
      "auth_token": "malformed",
      "body": {
        "quantity_per_hectare_in_qtl": 1,
        "crop_year_id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
        "added_by": "user"
      },
      "expected_status": 401,
      "expected_error_message_substring": "Malformed"
    },
    {
      "test_id": "TC-006",
      "description": "Negative - Missing required field 'quantity_per_hectare_in_qtl'",
      "category": "Negative | Validation",
      "endpoint": "/yield/add_yield",
      "auth_token": "valid",
      "body": {
        "crop_year_id": "3fa85f64-5717-4562-b3fc-2c963f66afa6"
      },
      "expected_status": 422,
      "expected_error_message_substring": "quantity_per_hectare_in_qtl"
    },
    {
      "test_id": "TC-007",
      "description": "Positive - Admin user adds yield",
      "category": "Positive | Role Based Access",
      "endpoint": "/yield/add_yield",
      "auth_token": "valid_admin",
      "body": {
        "quantity_per_hectare_in_qtl": 1.5,
        "crop_year_id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
        "added_by": "admin_user"
      },
      "expected_status": 200,
      "expected_response_contains": [
        "Yield added successfully"
      ]
    },
    {
      "test_id": "TC-008",
      "description": "Negative - Aggregator is not allowed to add yield",
      "category": "Negative | Role Based Access",
      "endpoint": "/yield/add_yield",
      "auth_token": "valid_aggregator",
      "body": {
        "quantity_per_hectare_in_qtl": 2,
        "crop_year_id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
        "added_by": "aggregator_user"
      },
      "expected_status": 403,
      "expected_error_message_substring": "permission"
    },
    {
      "test_id": "TC-009",
      "description": "Negative - Branch user is not allowed to add yield",
      "category": "Negative | Role Based Access",
      "endpoint": "/yield/add_yield",
      "auth_token": "valid_branch",
      "body": {
        "quantity_per_hectare_in_qtl": 2,
        "crop_year_id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
        "added_by": "branch_user"
      },
      "expected_status": 403,
      "expected_error_message_substring": "permission"
    }
  ]
}
