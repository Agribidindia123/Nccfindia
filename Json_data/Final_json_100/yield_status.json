  "test_cases": [
    {
      "test_id": "TC-001",
      "description": "Positive - Toggle yield status with valid yield_id and deleted_by",
      "category": "Positive / Data Update",
      "endpoint": "/yield/status",
      "auth_token": "valid",
      "request_body": {
        "yield_id": "d126cd5d-085a-49e3-890d-deecb21af828",
        "deleted_by": "abc"
      },
      "expected_status": 200,
      "expected_response_contains": [
        "Yield status toggled",
        "yield_id"
      ]
    },
    {
      "test_id": "TC-002",
      "description": "Negative - Missing yield_id field",
      "category": "Negative / Data Validation",
      "endpoint": "/yield/status",
      "auth_token": "valid",
      "request_body": {
        "deleted_by": "abc"
      },
      "expected_status": 422,
      "expected_error_message_substring": "yield_id is required"
    },
    {
      "test_id": "TC-003",
      "description": "Negative - Invalid UUID format for yield_id",
      "category": "Negative / Input Validation",
      "endpoint": "/yield/status",
      "auth_token": "valid",
      "request_body": {
        "yield_id": "1234-invalid-uuid",
        "deleted_by": "abc"
      },
      "expected_status": 422,
      "expected_error_message_substring": "Invalid UUID format"
    },
    {
      "test_id": "TC-004",
      "description": "Negative - Non-existing yield_id",
      "category": "Negative / Data Validation",
      "endpoint": "/yield/status",
      "auth_token": "valid",
      "request_body": {
        "yield_id": "00000000-0000-0000-0000-000000000000",
        "deleted_by": "abc"
      },
      "expected_status": 404,
      "expected_error_message_substring": "Yield not found"
    },
    {
      "test_id": "TC-005",
      "description": "Negative - Empty Authorization token",
      "category": "Negative / Authentication",
      "endpoint": "/yield/status",
      "auth_token": "empty",
      "request_body": {
        "yield_id": "d126cd5d-085a-49e3-890d-deecb21af828",
        "deleted_by": "abc"
      },
      "expected_status": 401,
      "expected_error_message_substring": "Missing or invalid Authorization"
    },
    {
      "test_id": "TC-006",
      "description": "Negative - Invalid Authorization token",
      "category": "Negative / Authentication",
      "endpoint": "/yield/status",
      "auth_token": "invalid",
      "request_body": {
        "yield_id": "d126cd5d-085a-49e3-890d-deecb21af828",
        "deleted_by": "abc"
      },
      "expected_status": 401,
      "expected_error_message_substring": "Invalid token"
    },
    {
      "test_id": "TC-007",
      "description": "Negative - Expired Authorization token",
      "category": "Negative / Authentication",
      "endpoint": "/yield/status",
      "auth_token": "expired",
      "request_body": {
        "yield_id": "d126cd5d-085a-49e3-890d-deecb21af828",
        "deleted_by": "abc"
      },
      "expected_status": 401,
      "expected_error_message_substring": "Token expired"
    },
    {
      "test_id": "TC-008",
      "description": "Negative - Malformed Authorization token",
      "category": "Negative / Authentication",
      "endpoint": "/yield/status",
      "auth_token": "malformed",
      "request_body": {
        "yield_id": "d126cd5d-085a-49e3-890d-deecb21af828",
        "deleted_by": "abc"
      },
      "expected_status": 401,
      "expected_error_message_substring": "Invalid token format"
    },
        {
      "test_id": "TC-009",
      "description": "Positive Role-Based - Admin toggles yield status successfully",
      "category": "Positive / Role-Based Access",
      "endpoint": "/yield/status",
      "auth_token": "valid_admin",
      "request_body": {
        "yield_id": "d126cd5d-085a-49e3-890d-deecb21af828",
        "deleted_by": "admin_user"
      },
      "expected_status": 200,
      "expected_response_contains": [
        "Yield status toggled",
        "yield_id"
      ]
    },
    {
      "test_id": "TC-010",
      "description": "Positive Role-Based - Aggregator forbidden to toggle yield status",
      "category": "Positive / Role-Based Access",
      "endpoint": "/yield/status",
      "auth_token": "valid_aggregator",
      "request_body": {
        "yield_id": "d126cd5d-085a-49e3-890d-deecb21af828",
        "deleted_by": "aggregator_user"
      },
      "expected_status": 403,
      "expected_error_message_substring": "Forbidden"
    },
    {
      "test_id": "TC-011",
      "description": "Negative Role-Based - Branch user forbidden to toggle yield status",
      "category": "Negative / Role-Based Access",
      "endpoint": "/yield/status",
      "auth_token": "valid_branch",
      "request_body": {
        "yield_id": "d126cd5d-085a-49e3-890d-deecb21af828",
        "deleted_by": "branch_user"
      },
      "expected_status": 403,
      "expected_error_message_substring": "Forbidden"
    }
