{
  "base_url": "https://uat-api.nccfindia.com",
  "tokens": {
    "valid": "<fetched_from_login_api>",
    "invalid": "iXd32fC8Dm",
    "empty": "",
    "expired": "iXd32fC8Dx",
    "malformed": "iXd32fC8D!",
    "valid_id": "<replace_with_id_token_here>",
    "invalid_id": "<replace_with_id_token_here>",
    "expired_id": "<replace_with_id_token_here>",
    "malformed_id": "<replace_with_id_token_here>",
    "valid_admin": "<fetched_admin_token>",
    "valid_aggregator": "<fetched_aggregator_token>",
    "valid_branch": "<fetched_branch_token>"
  },
  "test_cases": [
    {
      "test_id": "TC_001",
      "description": "Retrieve warehouse details with valid warehouse_id",
      "method": "GET",
      "endpoint": "/warehouse/get_warehouse/{warehouse_id}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {auth_token}"
      },
      "path_params": { "warehouse_id": "d669b1fb-a4f4-43e0-ab7c-850902d5b3ba" },
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response": {
        "type": "array",
        "mandatory_fields": [
          "warehouse_id",
          "warehouse_name",
          "warehouse_code",
          "warehouse_address",
          "warehouse_capacity_in_qtl",
          "latitude",
          "longitude",
          "state_name",
          "district_name",
          "city_name",
          "branch_name"
        ],
        "schema_validation": "pass"
      }
    },
    {
      "test_id": "TC_002",
      "description": "Invalid warehouse_id (non-existent warehouse)",
      "method": "GET",
      "endpoint": "/warehouse/get_warehouse/{warehouse_id}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {auth_token}"
      },
      "path_params": { "warehouse_id": "d669b1fb-a4f4-43e0-ab7c-850902d5b3b6" },
      "auth_token": "valid",
      "expected_status": 404,
      "expected_error_message": "Warehouse not found"
    },
    {
      "test_id": "TC_003",
      "description": "Missing Authorization header",
      "method": "GET",
      "endpoint": "/warehouse/get_warehouse/{warehouse_id}",
      "headers": { "Content-Type": "application/json" },
      "path_params": { "warehouse_id": "3fa85f64-5717-4562-b3fc-2c963f66afa6" },
      "auth_token": "empty",
      "expected_status": 401,
      "expected_error_message": "Authorization token is missing or invalid"
    },
    {
      "test_id": "TC_004",
      "description": "Invalid Authorization token (expired token)",
      "method": "GET",
      "endpoint": "/warehouse/get_warehouse/{warehouse_id}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {auth_token}"
      },
      "path_params": { "warehouse_id": "3fa85f64-5717-4562-b3fc-2c963f66afa6" },
      "auth_token": "expired",
      "expected_status": 401,
      "expected_error_message": "Authorization token is expired"
    },
    {
      "test_id": "TC_005",
      "description": "Invalid Authorization token (malformed token)",
      "method": "GET",
      "endpoint": "/warehouse/get_warehouse/{warehouse_id}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {auth_token}"
      },
      "path_params": { "warehouse_id": "3fa85f64-5717-4562-b3fc-2c963f66afa6" },
      "auth_token": "malformed",
      "expected_status": 401,
      "expected_error_message": "Authorization token is malformed"
    },
    {
      "test_id": "TC_006",
      "description": "Ensure that the API responds within 1500ms for valid requests",
      "method": "GET",
      "endpoint": "/warehouse/get_warehouse/{warehouse_id}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {auth_token}"
      },
      "path_params": { "warehouse_id": "d669b1fb-a4f4-43e0-ab7c-850902d5b3ba" },
      "auth_token": "valid",
      "expected_status": 200,
      "performance": {
        "max_response_time_ms": 1500
      }
    },
    {
      "test_id": "TC_007",
      "description": "Admin retrieves warehouse details",
      "method": "GET",
      "endpoint": "/warehouse/get_warehouse/{warehouse_id}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {auth_token}"
      },
      "path_params": { "warehouse_id": "d669b1fb-a4f4-43e0-ab7c-850902d5b3ba" },
      "auth_token": "valid_admin",
      "expected_status": 200
    },
    {
      "test_id": "TC_008",
      "description": "Aggregator tries to retrieve restricted warehouse details",
      "method": "GET",
      "endpoint": "/warehouse/get_warehouse/{warehouse_id}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {auth_token}"
      },
      "path_params": { "warehouse_id": "d669b1fb-a4f4-43e0-ab7c-850902d5b3ba" },
      "auth_token": "valid_aggregator",
      "expected_status": 403
    },
    {
      "test_id": "TC_009",
      "description": "Branch tries to access warehouse data successfully",
      "method": "GET",
      "endpoint": "/warehouse/get_warehouse/{warehouse_id}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {auth_token}"
      },
      "path_params": { "warehouse_id": "d669b1fb-a4f4-43e0-ab7c-850902d5b3ba" },
      "auth_token": "valid_branch",
      "expected_status": 200
    }
  ]
}
