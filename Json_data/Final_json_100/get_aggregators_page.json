  "test_cases": [
    {
      "test_id": "TC-001",
      "type": "Positive-Integration",
      "description": "Fetch all aggregators with required filters only (page: 1) — Positive test, Integration, CRUD Read operation, validates response structure and pagination.",
      "endpoint": "/aggregator/get_all_aggregators/1",
      "method": "GET",
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response": "Successfully retrieved 200 aggregators (page 1)"
    },
    {
      "test_id": "TC-002",
      "type": "Positive-Integration",
      "description": "Fetch all active aggregators (page: 2) — Positive test for pagination and filtering.",
      "endpoint": "/aggregator/get_all_aggregators/2",
      "method": "GET",
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response": "Successfully retrieved 200 aggregators (page 2)"
    },
    {
      "test_id": "TC-003",
      "type": "Negative-Boundary",
      "description": "Fetch aggregators with invalid UUID in state_master_id — Negative test for validation (422).",
      "endpoint": "/aggregator/get_all_aggregators/1",
      "method": "GET",
      "auth_token": "valid",
      "query_params": {
        "state_master_id": "52d700ac-efbd-447a-85a5-536d0d90056M"
      },
      "expected_status": 422,
      "expected_response": "Validation failed. Please check the required fields and their formats."
    },
    {
      "test_id": "TC-004",
      "type": "Security-Authentication",
      "description": "Fetch aggregators with expired token — Authentication negative test.",
      "endpoint": "/aggregator/get_all_aggregators/1",
      "method": "GET",
      "auth_token": "expired",
      "expected_status": 401,
      "expected_response": {
        "detail": "Failed to get signing key: Error decoding token headers."
      }
    },
    {
      "test_id": "TC-005",
      "type": "Security-Authorization",
      "description": "Fetch aggregators with malformed token — Authorization negative test.",
      "endpoint": "/aggregator/get_all_aggregators/1",
      "method": "GET",
      "auth_token": "malformed",
      "expected_status": 401,
      "expected_response": {
        "detail": "Failed to get signing key: Error decoding token headers."
      }
    },
    {
      "test_id": "TC-006",
      "type": "Positive-RoleBasedAccess",
      "description": "Admin user fetches all aggregators — validates that admin role has full access privileges.",
      "endpoint": "/aggregator/get_all_aggregators/1",
      "method": "GET",
      "auth_token": "valid_admin",
      "expected_status": 200,
      "expected_response": "Admin successfully retrieved all aggregators."
    },
    {
      "test_id": "TC-007",
      "type": "Negative-RoleBasedAccess",
      "description": "Aggregator role attempts to fetch all aggregators — validates that access is denied (403 Forbidden).",
      "endpoint": "/aggregator/get_all_aggregators/1",
      "method": "GET",
      "auth_token": "valid_aggregator",
      "expected_status": 403,
      "expected_response": {
        "detail": "Access denied: insufficient permissions."
      }
    },
    {
      "test_id": "TC-008",
      "type": "Negative-RoleBasedAccess",
      "description": "Branch role attempts to fetch all aggregators — validates that access is denied (403 Forbidden).",
      "endpoint": "/aggregator/get_all_aggregators/1",
      "method": "GET",
      "auth_token": "valid_branch",
      "expected_status": 200,
      "expected_response": {
        "detail": "Access denied: insufficient permissions."
      }
