{
  "base_url": "https://uat-api.nccfindia.com",
  "method": "GET",
  "headers": {
    "Content-Type": "application/json"
  },
  "tokens": {
    "valid": "<fetched_from_login_api>",
    "invalid": "invalid123",
    "expired": "expired_token_example",
    "malformed": "malformed@@token",
    "empty": "",
    "valid_id": "<fetched_from_login_api>",
    "invalid_id": "invalid_id_token",
    "expired_id": "expired_id_token",
    "malformed_id": "malformed@@idtoken",
    "empty_id": "",
    "valid_admin": "<fetched_admin_token>",
    "valid_aggregator": "<fetched_aggregator_token>",
    "valid_branch": "<fetched_branch_token>"
  },
  "test_cases": [
    {
      "test_id": "TC-001",
      "description": "Positive - Basic Search with valid prefix",
      "category": "Positive / Data Validation",
      "endpoint": "/aggregator/get_by_content",
      "method": "GET",
      "auth_token": "valid",
      "id_token": "valid_id",
      "query_params": { "content": "Agri" },
      "expected_status": 200,
      "expected_response": [
        "status",
        "message",
        "data",
        "aggregator_id",
        "aggregator_name"
      ]
    },
    {
      "test_id": "TC-002",
      "description": "Positive - Case insensitive search",
      "category": "Positive / Data Validation",
      "endpoint": "/aggregator/get_by_content",
      "method": "GET",
      "auth_token": "valid",
      "id_token": "valid_id",
      "query_params": { "content": "agri" },
      "expected_status": 200,
      "expected_response": ["status", "message", "data"]
    },
    {
      "test_id": "TC-003",
      "description": "Positive - Filter only active aggregators",
      "category": "Positive / Data Validation",
      "endpoint": "/aggregator/get_by_content",
      "method": "GET",
      "auth_token": "valid",
      "id_token": "valid_id",
      "query_params": { "content": "Agri", "status": 1 },
      "expected_status": 200,
      "expected_response": ["status", "message", "data"]
    },
    {
      "test_id": "TC-004",
      "description": "Positive - Filter only inactive aggregators",
      "category": "Positive / Data Validation",
      "endpoint": "/aggregator/get_by_content",
      "method": "GET",
      "auth_token": "valid",
      "id_token": "valid_id",
      "query_params": { "content": "Agri", "status": 0 },
      "expected_status": 200,
      "expected_response": ["status", "message", "data"]
    },
    {
      "test_id": "TC-005",
      "description": "Positive - Search non-existent prefix returns empty list",
      "category": "Positive / Data Validation",
      "endpoint": "/aggregator/get_by_content",
      "method": "GET",
      "auth_token": "valid",
      "id_token": "valid_id",
      "query_params": { "content": "xyz" },
      "expected_status": 200,
      "expected_response": ["status", "message", "data"]
    },
    {
      "test_id": "TC-006",
      "description": "Negative - Invalid access token",
      "category": "Negative / Authentication",
      "endpoint": "/aggregator/get_by_content",
      "method": "GET",
      "auth_token": "invalid",
      "id_token": "valid_id",
      "query_params": { "content": "Agri" },
      "expected_status": 401,
      "expected_response": "Unauthorized. Invalid token."
    },
    {
      "test_id": "TC-007",
      "description": "Negative - Missing Authorization header",
      "category": "Negative / Authentication",
      "endpoint": "/aggregator/get_by_content",
      "method": "GET",
      "auth_token": "empty",
      "id_token": "valid_id",
      "query_params": { "content": "Agri" },
      "expected_status": 401,
      "expected_response": "Access token missing or invalid"
    },
    {
      "test_id": "TC-008",
      "description": "Negative - Expired tokens",
      "category": "Negative / Authentication",
      "endpoint": "/aggregator/get_by_content",
      "method": "GET",
      "auth_token": "expired",
      "id_token": "expired_id",
      "query_params": { "content": "Agri" },
      "expected_status": 401,
      "expected_response": "Token expired"
    },
    {
      "test_id": "TC-009",
      "description": "Negative - Unsupported HTTP method (POST)",
      "category": "Negative / HTTP Validation",
      "endpoint": "/aggregator/get_by_content",
      "method": "POST",
      "auth_token": "valid",
      "id_token": "valid_id",
      "query_params": { "content": "Agri" },
      "expected_status": 405,
      "expected_response": "Method Not Allowed"
    },
    {
      "test_id": "TC-010",
      "description": "Positive - Numeric prefix search",
      "category": "Positive / Data Validation",
      "endpoint": "/aggregator/get_by_content",
      "method": "GET",
      "auth_token": "valid",
      "id_token": "valid_id",
      "query_params": { "content": "12" },
      "expected_status": 200,
      "expected_response": ["status", "message", "data"]
    },
    {
      "test_id": "TC-011",
      "description": "Performance - API should respond within 1500ms",
      "category": "Performance / Response Time",
      "endpoint": "/aggregator/get_by_content",
      "method": "GET",
      "auth_token": "valid",
      "id_token": "valid_id",
      "query_params": { "content": "Agri" },
      "expected_status": 200,
      "performance": { "max_response_time_ms": 1500 },
      "expected_response": ["status", "data"]
    },
    {
      "test_id": "TC-012",
      "description": "Role-based - ADMIN can access all aggregator data",
      "category": "Positive / Role Authorization",
      "endpoint": "/aggregator/get_by_content",
      "method": "GET",
      "auth_token": "valid_admin",
      "id_token": "valid_id",
      "user_role": "ADMIN",
      "query_params": { "content": "Agri" },
      "expected_status": 200,
      "expected_response": ["status", "data"]
    },
    {
      "test_id": "TC-013",
      "description": "Role-based - AGGREGATOR cannot access restricted aggregator data",
      "category": "Negative / Role Authorization",
      "endpoint": "/aggregator/get_by_content",
      "method": "GET",
      "auth_token": "valid_aggregator",
      "id_token": "valid_id",
      "user_role": "AGGREGATOR",
      "query_params": { "content": "Agri" },
      "expected_status": 403,
      "expected_response": "Access denied: insufficient permissions"
    },
    {
      "test_id": "TC-014",
      "description": "Role-based - BRANCH can only access its own aggregator data",
      "category": "Positive / Role Authorization",
      "endpoint": "/aggregator/get_by_content",
      "method": "GET",
      "auth_token": "valid_branch",
      "id_token": "valid_id",
      "user_role": "BRANCH",
      "query_params": { "content": "Agri" },
      "expected_status": 200,
      "expected_response": ["status", "data"]
    }
  ]
}
