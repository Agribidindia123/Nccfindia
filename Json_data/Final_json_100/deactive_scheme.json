  },
  "test_cases": [
    {
      "test_id": "TC-001",
      "description": "Positive - Deactivate scheme with valid scheme_id and valid token",
      "category": "Positive / Data Update",
      "endpoint": "/schemes/deactivate_scheme/33684386-1c17-4f17-b4e5-eef3ff32d407",
      "auth_token": "valid",
      "request_body": {
        "scheme_id": "33684386-1c17-4f17-b4e5-eef3ff32d407"
      },
      "expected_status": 200,
      "expected_response_contains": [
        "Scheme deactivated successfully",
        "scheme_id"
      ]
    },
      {
      "test_id": "TC-002",
      "description": "Negative - Invalid UUID format for scheme_id",
      "category": "Negative / Input Validation",
      "endpoint": "/schemes/deactivate_scheme/33684386-1c17-",
      "auth_token": "valid",
      "request_body": {
        "scheme_id": "33684386-1c17-"
      },
      "expected_status": 422,
      "expected_error_message_substring": "Invalid UUID format"
    },
    {
      "test_id": "TC-003",
      "description": "Negative - Non-existing scheme_id",
      "category": "Negative / Data Validation",
      "endpoint": "/schemes/deactivate_scheme/00000000-0000-0000-0000-000000000000",
      "auth_token": "valid",
      "request_body": {
        "scheme_id": "00000000-0000-0000-0000-000000000000"
      },
      "expected_status": 404,
      "expected_error_message_substring": "Scheme not found"
    },
    {
      "test_id": "TC-004",
      "description": "Negative - Empty Authorization token",
      "category": "Negative / Authentication",
      "endpoint": "/schemes/deactivate_scheme/33684386-1c17-4f17-b4e5-eef3ff32d407",
      "auth_token": "empty",
      "request_body": {
        "scheme_id": "33684386-1c17-4f17-b4e5-eef3ff32d407"
      },
      "expected_status": 401,
      "expected_error_message_substring": "Missing or invalid Authorization"
    },
    {
      "test_id": "TC-005",
      "description": "Negative - Invalid Authorization token",
      "category": "Negative / Authentication",
      "endpoint": "/schemes/deactivate_scheme/33684386-1c17-4f17-b4e5-eef3ff32d407",
      "auth_token": "invalid",
      "request_body": {
        "scheme_id": "33684386-1c17-4f17-b4e5-eef3ff32d407"
      },
      "expected_status": 401,
      "expected_error_message_substring": "Invalid token"
    },
    {
      "test_id": "TC-006",
      "description": "Negative - Expired Authorization token",
      "category": "Negative / Authentication",
      "endpoint": "/schemes/deactivate_scheme/33684386-1c17-4f17-b4e5-eef3ff32d407",
      "auth_token": "expired",
      "request_body": {
        "scheme_id": "33684386-1c17-4f17-b4e5-eef3ff32d407"
      },
      "expected_status": 401,
      "expected_error_message_substring": "Token expired"
    },
    {
      "test_id": "TC-007",
      "description": "Negative - Malformed Authorization token",
      "category": "Negative / Authentication",
      "endpoint": "/schemes/deactivate_scheme/33684386-1c17-4f17-b4e5-eef3ff32d407",
      "auth_token": "malformed",
      "request_body": {
        "scheme_id": "33684386-1c17-4f17-b4e5-eef3ff32d407"
      },
      "expected_status": 401,
      "expected_error_message_substring": "Invalid token format"
    },
        {
      "test_id": "TC-008",
      "description": "Positive Role-Based - Admin deactivates scheme successfully",
      "category": "Positive / Role-Based Access",
      "endpoint": "/schemes/deactivate_scheme/33684386-1c17-4f17-b4e5-eef3ff32d407",
      "auth_token": "valid_admin",
      "request_body": {
        "scheme_id": "33684386-1c17-4f17-b4e5-eef3ff32d407"
      },
      "expected_status": 200,
      "expected_response_contains": [
        "Scheme deactivated successfully"
      ]
    },
    {
      "test_id": "TC-009",
      "description": "Negative Role-Based - Aggregator forbidden to deactivate scheme",
      "category": "Negative / Role-Based Access",
      "endpoint": "/schemes/deactivate_scheme/33684386-1c17-4f17-b4e5-eef3ff32d407",
      "auth_token": "valid_aggregator",
      "request_body": {
        "scheme_id": "33684386-1c17-4f17-b4e5-eef3ff32d407"
      },
      "expected_status": 403,
      "expected_error_message_substring": "Forbidden"
    },
    {
      "test_id": "TC-010",
      "description": "Negative Role-Based - Branch user forbidden to deactivate scheme",
      "category": "Negative / Role-Based Access",
      "endpoint": "/schemes/deactivate_scheme/33684386-1c17-4f17-b4e5-eef3ff32d407",
      "auth_token": "valid_branch",
      "request_body": {
        "scheme_id": "33684386-1c17-4f17-b4e5-eef3ff32d407"
      },
      "expected_status": 403,
      "expected_error_message_substring": "Forbidden"
    }
  ]
}