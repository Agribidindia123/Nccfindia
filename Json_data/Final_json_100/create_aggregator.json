  "test_cases": [

    {
      "test_id": "TC-001",
      "description": "Create aggregator with valid required fields — Positive",
      "endpoint": "/aggregator/create",
      "request_body": {
        "email_id": "xyz@gmail.com",
        "mobile_number": "9878989878",
        "name": "test"
      },
