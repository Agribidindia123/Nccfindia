      "expected_status": 200,
      "expected_response": "Aggregator created successfully"
    },

    {
      "test_id": "TC-002",
      "description": "Missing required field: email_id — Negative",
      "endpoint": "/aggregator/create",
      "request_body": {
        "mobile_number": "9878989878",
        "name": "test"
      },
      "auth_token": "valid",
      "expected_status": 422,
