  "test_cases": [
    {
      "test_id": "TC-001",
      "category": "Functional-Positive",
      "description": "Successfully create a new scheme",
      "method": "POST",
      "endpoint": "/schemes/create_scheme",
      "headers": {
        "Content-Type": "application/json"
      },
      "auth_token": "valid",
      "request_body": {
        "scheme_name": "dummy12 scheme"
      },
      "expected_status": 200,
      "expected_response": {
        "status": 200,
        "message": "Scheme created successfully",
        "data": [
          { "scheme_id": "any" }
        ],
        "total_count": 1
      }
    },
    {
      "test_id": "TC-002",
      "category": "Functional-Negative",
      "description": "Missing required fields in request body",
      "method": "POST",
      "endpoint": "/schemes/create_scheme",
      "headers": {
        "Content-Type": "application/json"
      },
      "auth_token": "valid",
      "request_body": {
        "scheme_name": ""
      },
      "expected_status": 422,
      "expected_response": {
        "status": "error",
        "message": "Validation failed. Please check the required fields and their formats.",
        "error_type": "validation_error",
        "validation_errors": [
          {
            "field": "scheme_name",
            "message": "String should have at least 1 character",
            "value": ""
          }
        ]
      }
    },
    {
      "test_id": "TC-003",
      "category": "Authentication-Security",
      "description": "Unauthorized request (missing Authorization header)",
      "method": "POST",
      "endpoint": "/schemes/create_scheme",
      "headers": {
        "Content-Type": "application/json"
      },
      "auth_token": "empty",
      "request_body": {
        "scheme_name": "PM Kisan"
      },
      "expected_status": 401,
      "expected_response": {
        "detail": "Missing or invalid Authorization header"
      }
    },
    {
      "test_id": "TC-004",
      "category": "Functional-Negative",
      "description": "Create a scheme with duplicate name",
      "method": "POST",
      "endpoint": "/schemes/create_scheme",
      "headers": {
        "Content-Type": "application/json"
      },
      "auth_token": "valid",
      "request_body": {
        "scheme_name": "PM Kisan"
      },
      "expected_status": 400,
      "expected_response": {
        "detail": "Scheme with name 'PM Kisan' already exists"
      }
    },
    {
      "test_id": "TC-005",
      "category": "Functional-Boundary",
      "description": "Very long string for scheme name (more than 100 characters)",
      "method": "POST",
      "endpoint": "/schemes/create_scheme",
      "headers": {
        "Content-Type": "application/json"
      },
      "auth_token": "valid",
      "request_body": {
        "scheme_name": "gfhjgasdrtdftyfhghjkjhjbvvgftrdfgtrdesdfhytrdgredfkloinhvgfdrasedfvcgnjhgvfdsawertyuioplkkjhhgffdsazxxcvvbnn"
      },
      "expected_status": 422,
      "expected_response": {
        "validation_errors": [
          {
            "field": "scheme_name",
            "message": "String should have at most 100 characters"
          }
        ]
      }
    },
    {
      "test_id": "TC-006",
      "category": "Positive / Role-Based Access",
      "description": "Admin user successfully creates a new scheme",
      "method": "POST",
      "endpoint": "/schemes/create_scheme",
      "headers": {
        "Content-Type": "application/json"
      },
      "auth_token": "valid_admin",
      "request_body": {
        "scheme_name": "Admin Scheme Example"
      },
      "expected_status": 200,
      "expected_response": {
        "status": 200,
        "message": "Scheme created successfully",
        "data": [
          { "scheme_id": "any" }
        ]
      }
    },
    {
      "test_id": "TC-007",
      "category": "Positive / Role-Based Access",
      "description": "Aggregator not authorized to create a scheme",
      "method": "POST",
      "endpoint": "/schemes/create_scheme",
      "headers": {
        "Content-Type": "application/json"
      },
      "auth_token": "valid_aggregator",
      "request_body": {
        "scheme_name": "Aggregator Scheme Example"
      },
      "expected_status": 403,
      "expected_response": {
        "detail": "Forbidden: Insufficient role permissions"
      }
    },
    {
      "test_id": "TC-008",
      "category": "Negative / Role-Based Access",
      "description": "Branch user not authorized to create a scheme",
      "method": "POST",
      "endpoint": "/schemes/create_scheme",
      "headers": {
        "Content-Type": "application/json"
      },
      "auth_token": "valid_branch",
      "request_body": {
        "scheme_name": "Branch Attempt Scheme"
      },
      "expected_status": 403,
      "expected_response": {
        "detail": "Forbidden: Insufficient role permissions"
      }
    }
  ]
