{
  "base_url": "https://uat-api.nccfindia.com",
  "method": "GET",
  "headers": {
    "Content-Type": "application/json"
  },
  "tokens": {
    "valid": "<fetched_from_login_api>",
    "invalid": "invalid123",
    "expired": "expired_token_example",
    "malformed": "malformed@@token",
    "empty": "",
    "valid_admin": "<fetched_admin_token>",
    "valid_aggregator": "<fetched_aggregator_token>",
    "valid_branch": "<fetched_branch_token>",
    "valid_id": "<fetched_from_login_api>",
    "invalid_id": "invalid_id_token_example",
    "expired_id": "expired_id_token_example",
    "malformed_id": "malformed@@id_token"
  },
  "test_cases": [
    {
      "test_id": "TC-001",
      "description": "Positive - Search villages with valid prefix 'Che'",
      "category": "Positive / Data Retrieval",
      "endpoint": "/master/get_villages_by_content/Che",
      "method": "GET",
      "auth_token": "valid",
      "id_token": "valid_id",
      "path_param": { "content": "Che" },
      "expected_status": 200,
      "expected_response": [
        "status",
        "message",
        "data",
        "village_id",
        "village_name"
      ],
      "validate_schema": true,
      "performance": { "max_response_time_ms": 1000 }
    },
    {
      "test_id": "TC-002",
      "description": "Positive - Case Insensitivity (search 'che' same as 'Che')",
      "category": "Positive / Case Sensitivity",
      "endpoint": "/master/get_villages_by_content/che",
      "method": "GET",
      "auth_token": "valid",
      "id_token": "valid_id",
      "path_param": { "content": "che" },
      "expected_status": 200,
      "expected_response": [
        "status",
        "message",
        "data",
        "village_name"
      ],
      "compare_with_previous": "TC-001"
    },
    {
      "test_id": "TC-003",
      "description": "Positive - No Results for non-existent prefix 'zzz'",
      "category": "Positive / Empty Data",
      "endpoint": "/master/get_villages_by_content/zzz",
      "method": "GET",
      "auth_token": "valid",
      "id_token": "valid_id",
      "path_param": { "content": "zzz" },
      "expected_status": 200,
      "expected_response": [
        "status",
        "message",
        "data",
        "total_found"
      ],
      "validate_data_empty": true
    },
    {
      "test_id": "TC-004",
      "description": "Positive - Search with valid special characters (e.g., 'St.')",
      "category": "Positive / Special Character Handling",
      "endpoint": "/master/get_villages_by_content/St.",
      "method": "GET",
      "auth_token": "valid",
      "id_token": "valid_id",
      "path_param": { "content": "St." },
      "expected_status": 200,
      "expected_response": [
        "status",
        "message",
        "data"
      ]
    },
    {
      "test_id": "TC-005",
      "description": "Negative - Empty path parameter (missing /content/)",
      "category": "Negative / Input Validation",
      "endpoint": "/master/get_villages_by_content/",
      "method": "GET",
      "auth_token": "valid",
      "id_token": "valid_id",
      "expected_status": 404,
      "expected_response": [
        "Missing required path parameter",
        "error"
      ]
    },
    {
      "test_id": "TC-006",
      "description": "Negative - Invalid access token",
      "category": "Negative / Authentication",
      "endpoint": "/master/get_villages_by_content/Che",
      "method": "GET",
      "auth_token": "invalid",
      "id_token": "valid_id",
      "expected_status": 401,
      "expected_response": [
        "Unauthorized",
        "Failed decoding"
      ]
    },
    {
      "test_id": "TC-007",
      "description": "Negative - Missing Authorization header",
      "category": "Negative / Authentication",
      "endpoint": "/master/get_villages_by_content/Che",
      "method": "GET",
      "auth_token": "empty",
      "id_token": "valid_id",
      "expected_status": 401,
      "expected_response": [
        "Unauthorized access",
        "Authentication token missing or invalid"
      ]
    },
    {
      "test_id": "TC-009",
      "description": "Negative - Expired token",
      "category": "Negative / Token Expiry",
      "endpoint": "/master/get_villages_by_content/Che",
      "method": "GET",
      "auth_token": "expired",
      "id_token": "expired_id",
      "expected_status": 401,
      "expected_response": [
        "Unauthorized access",
        "Token expired"
      ]
    },
    {
      "test_id": "TC-010",
      "description": "Negative - Malformed token",
      "category": "Negative / Token Format",
      "endpoint": "/master/get_villages_by_content/Che",
      "method": "GET",
      "auth_token": "malformed",
      "id_token": "malformed_id",
      "expected_status": 401,
      "expected_response": [
        "Unauthorized access",
        "Malformed token"
      ]
    },
    {
      "test_id": "TC-011",
      "description": "Positive - Numeric input ('12')",
      "category": "Positive / Numeric Input",
      "endpoint": "/master/get_villages_by_content/12",
      "method": "GET",
      "auth_token": "valid",
      "id_token": "valid_id",
      "expected_status": 200,
      "expected_response": [
        "status",
        "message",
        "data"
      ]
    },
    {
      "test_id": "TC-012",
      "description": "Negative - Wrong HTTP Method (POST instead of GET)",
      "category": "Negative / Method Validation",
      "endpoint": "/master/get_villages_by_content/Che",
      "method": "POST",
      "auth_token": "valid",
      "id_token": "valid_id",
      "expected_status": 405,
      "expected_response": [
        "Method Not Allowed"
      ]
    },
    {
      "test_id": "TC-013",
      "description": "Performance - Ensure response under 1s",
      "category": "Performance / Response Time",
      "endpoint": "/master/get_villages_by_content/Che",
      "method": "GET",
      "auth_token": "valid",
      "id_token": "valid_id",
      "expected_status": 200,
      "expected_response": [
        "data",
        "message"
      ],
      "performance": {
        "max_response_time_ms": 1000
      }
    },
    {
      "test_id": "TC-014",
      "description": "Admin user successfully retrieves villages",
      "category": "Authorization-Positive",
      "endpoint": "/master/get_villages_by_content/Che",
      "method": "GET",
      "auth_token": "valid_admin",
      "id_token": "valid_id",
      "expected_status": 200,
      "expected_response": [
        "status",
        "message",
        "data"
      ]
    },
    {
      "test_id": "TC-015",
      "description": "Aggregator tries to access restricted village data",
      "category": "Authorization-Negative",
      "endpoint": "/master/get_villages_by_content/Che",
      "method": "GET",
      "auth_token": "valid_aggregator",
      "id_token": "valid_id",
      "expected_status": 200,
      "expected_response": [
        "Access denied: insufficient permissions"
      ]
    },
    {
      "test_id": "TC-016",
      "description": "Branch successfully retrieves all villages",
      "category": "Authorization-Negative",
      "endpoint": "/master/get_villages_by_content/Che",
      "method": "GET",
      "auth_token": "valid_branch",
      "id_token": "valid_id",
      "expected_status": 200,
      "expected_response": [
        "Access denied: insufficient permissions"
      ]
    }
  ]
}
