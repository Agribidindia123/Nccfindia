{
  "base_url": "https://uat-api.nccfindia.com",
  "method": "PUT",
  "headers": { "Content-Type": "application/json" },
  "tokens": {
    "valid": "iXd32fC8Dv",
    "invalid": "iXd32fC8Dm",
    "expired": "your_expired_token_here",
    "malformed": "malformed_token"
  },
  "test_cases": [
    {
      "test_id": "TC-001",
      "type": "Positive-Data Retrieval",
      "description": "Retrieve existing aggregator with a valid aggregator_id — Positive test, Integration, CRUD Read operation, ensures correct aggregator data is fetched",
      "endpoint": "/aggregator/af5a57bd-891f-4479-9177-15efd66856c4",
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response": {
        "status": "string",
        "message": "string",
        "data": ["string"],
        "total_count": 0
      }
    },
    {
      "test_id": "TC-002",
      "type": "Negative-Data Validation",
      "description": "Aggregator with given ID does not exist — Negative test, Boundary check, Data Validation, CRUD Read operation",
      "endpoint": "/aggregator/nonexistent-id",
      "auth_token": "valid",
      "expected_status": 404,
      "expected_response": { "detail": "Not found" }
    },
    {
      "test_id": "TC-003",
      "type": "Negative-Authentication",
      "description": "Call API with invalid token — Negative test, Authentication & Authorization, Security",
      "endpoint": "/aggregator/af5a57bd-891f-4479-9177-15efd66856c4",
      "auth_token": "invalid",
      "expected_status": 401,
      "expected_response": {
        "status": "error",
        "message": "Unauthorized access. Authentication token is missing or invalid.",
        "data": [],
        "total_count": 0
      }
    },
    {
      "test_id": "TC-004",
      "type": "Negative-Authentication",
      "description": "Call API with missing Authorization header — Negative test, Authentication & Authorization, Security",
      "endpoint": "/aggregator/af5a57bd-891f-4479-9177-15efd66856c4",
      "auth_token": "empty",
      "expected_status": 401,
      "expected_response": {
        "status": "error",
        "message": "Unauthorized access. Authentication token is missing or invalid.",
        "data": [],
        "total_count": 0
      }
    },
    {
      "test_id": "TC-005",
      "type": "Negative-Authentication",
      "description": "Call API with expired token — Negative test, Authentication & Authorization, Security, token expiration handling",
      "endpoint": "/aggregator/af5a57bd-891f-4479-9177-15efd66856c4",
      "auth_token": "expired",
      "expected_status": 401,
      "expected_response": {
        "status": "error",
        "message": "Unauthorized access. Token expired.",
        "data": [],
        "total_count": 0
      }
    },
    {
      "test_id": "TC-006",
      "type": "Negative-Authentication",
      "description": "Call API with malformed token — Negative test, Authentication & Authorization, Security, malformed token handling",
      "endpoint": "/aggregator/af5a57bd-891f-4479-9177-15efd66856c4",
      "auth_token": "malformed",
      "expected_status": 401,
      "expected_response": {
        "status": "error",
        "message": "Unauthorized access. Malformed token.",
        "data": [],
        "total_count": 0
      }
    }
  ]
}
