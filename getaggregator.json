{
  "base_url": "https://uat-api.nccfindia.com",
  "method": "GET",
  "headers": {
    "Content-Type": "application/json",
    "Accept": "application/json"
  },
  "tokens": {
    "valid": "iXd32fC8Dv",
    "invalid": "iXd32fC8Dm",
    "expired": "your_expired_token_here",
    "malformed": "malformed_token"
  },
  "test_cases": [
    {
      "test_id": "TC-001",
      "type": "Positive - Data Retrieval, Integration, CRUD Read",
      "description": "Verify successful retrieval of all aggregators with no filters applied — ensures endpoint returns complete data set correctly.",
      "endpoint": "/aggregator/get_all_aggregators",
      "query_params": {},
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response_contains": "Successfully retrieved"
    },
    {
      "test_id": "TC-002",
      "type": "Negative - Data Validation, Input Validation",
      "description": "Verify response for malformed state_master_id (invalid UUID format) — ensures proper 422 validation handling.",
      "endpoint": "/aggregator/get_all_aggregators",
      "query_params": { "state_master_id": "52d700ac-efbd-447a-85a5-536d0d90056M" },
      "auth_token": "valid",
      "expected_status": 422,
      "expected_response_contains": "Unprocessable Entity"
    },
    {
      "test_id": "TC-003",
      "type": "Positive - Boundary, Data Retrieval",
      "description": "Verify response when no aggregators match the given crop ID filter — ensures API handles empty datasets gracefully.",
      "endpoint": "/aggregator/get_all_aggregators",
      "query_params": { "crops_record_id": "02d41f34-51b8-4a73-84fe-362d57c0a989" },
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response_contains": "\"data\": []"
    },
    {
      "test_id": "TC-004",
      "type": "Positive - Performance, Pagination, Integration",
      "description": "Verify pagination handling with page=2 — ensures performance and pagination consistency across pages.",
      "endpoint": "/aggregator/get_all_aggregators",
      "query_params": { "page": 2 },
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response_contains": "\"current_page\": 2"
    },
    {
      "test_id": "TC-005",
      "type": "Positive - Data Filtering, CRUD Read",
      "description": "Verify filtering by active aggregators — ensures data filter works as expected for status=1.",
      "endpoint": "/aggregator/get_all_aggregators",
      "query_params": { "aggregator_status": 1 },
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response_contains": "\"status\": 1"
    },
    {
      "test_id": "TC-006",
      "type": "Positive - Data Filtering, CRUD Read",
      "description": "Verify filtering by inactive aggregators — ensures data filter works as expected for status=0.",
      "endpoint": "/aggregator/get_all_aggregators",
      "query_params": { "aggregator_status": 0 },
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response_contains": "\"status\": 0"
    },
    {
      "test_id": "TC-007",
      "type": "Positive - Data Filtering, CRUD Read",
      "description": "Verify filtering by valid state_master_id — ensures endpoint filters data correctly by state.",
      "endpoint": "/aggregator/get_all_aggregators",
      "query_params": { "state_master_id": "52d700ac-efbd-447a-85a5-536d0d90056e" },
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response_contains": "52d700ac-efbd-447a-85a5-536d0d90056e"
    },
    {
      "test_id": "TC-008",
      "type": "Negative - Authentication, Security",
      "description": "Verify API response when called with expired token — ensures token expiry validation and proper 401 handling.",
      "endpoint": "/aggregator/get_all_aggregators",
      "query_params": {},
      "auth_token": "expired",
      "expected_status": 401,
      "expected_response_contains": "Token expired"
    },
    {
      "test_id": "TC-009",
      "type": "Negative - Authentication, Security",
      "description": "Verify API response when called with malformed token — ensures security layer rejects improperly formatted tokens.",
      "endpoint": "/aggregator/get_all_aggregators",
      "query_params": {},
      "auth_token": "malformed",
      "expected_status": 401,
      "expected_response_contains": "Malformed token"
    },
    {
      "test_id": "TC-010",
      "type": "Negative - Authentication, Security",
      "description": "Verify API response when called with invalid token — ensures correct handling of unauthorized access attempts.",
      "endpoint": "/aggregator/get_all_aggregators",
      "query_params": {},
      "auth_token": "invalid",
      "expected_status": 401,
      "expected_response_contains": "Invalid token"
    }
  ]
}
