        "district_master_id": "c9082fec-4d95-4b81-9f35-2f4ae6cce2c9",
        "state_master_id": "7b5fdba8-0cc7-483a-af94-822dbad33b90",
        "collection_center_status": false,
        "limit": 50,
        "offset": 0
