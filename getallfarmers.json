{
  "base_url": "https://uat-api.nccfindia.com",
  "method": "GET",
  "headers": {
    "Content-Type": "application/json"
  },
  "tokens": {
    "valid": "iXd32fC8Dv",
    "invalid": "iXd32fC8Dm",
    "expired": "expired_token_example",
    "malformed": "malformed_token_example"
  },
  "test_cases": [
    {
      "test_id": "TC-001",
      "category": "Functional - Positive",
      "type": "Positive-Integration-CRUD",
      "description": "Retrieve all farmers with all parameters in request — Positive test to validate API returns correct filtered farmers with pagination, Data Validation, Integration",
      "endpoint": "/farmer/get_all_farmers",
      "request_params": {
        "farmer_status": 1,
        "city_master_id": "c0759fa2-e4e8-415a-8430-8b75144a03a6",
        "district_master_id": "80d7de71-474e-450b-b35f-d98ed4ada97a",
        "state_master_id": "52d700ac-efbd-447a-85a5-536d0d90056e",
        "page": 1
      },
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response": {
        "farmer_status": 0,
        "message": "Successfully retrieved 156 farmers (page 1)"
      }
    },
    {
      "test_id": "TC-002",
      "category": "Functional - Positive",
      "type": "Positive-Integration-CRUD",
      "description": "Retrieve all farmers with valid city_master_id — Positive test, validates API filters correctly by city, Integration, Data Validation",
      "endpoint": "/farmer/get_all_farmers",
      "request_params": {
        "city_master_id": "c0759fa2-e4e8-415a-8430-8b75144a03a6"
      },
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response": {
        "message": "Farmers retrieved successfully"
      }
    },
    {
      "test_id": "TC-003",
      "category": "Functional - Positive",
      "type": "Positive-Integration-CRUD",
      "description": "Retrieve all farmers with valid state_master_id and district_master_id — Positive test, Integration, validates correct filtering and pagination",
      "endpoint": "/farmer/get_all_farmers",
      "request_params": {
        "district_master_id": "80d7de71-474e-450b-b35f-d98ed4ada97a",
        "state_master_id": "52d700ac-efbd-447a-85a5-536d0d90056e"
      },
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response": {
        "message": "Farmers retrieved successfully",
        "data": ["...same as TC-001..."],
        "meta": {
          "current_page": 1,
          "page_size": 10,
          "has_next_page": true,
          "has_previous_page": false
        }
      }
    },
    {
      "test_id": "TC-004",
      "category": "Functional - Positive",
      "type": "Positive-Integration-CRUD",
      "description": "Fetch all farmers without filters — Positive test, Integration, validates API default behavior and pagination",
      "endpoint": "/farmer/get_all_farmers",
      "request_params": {},
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response": {
        "message": "Farmers retrieved successfully",
        "data": ["...all farmers..."],
        "meta": {
          "current_page": 1,
          "page_size": 10,
          "has_next_page": true,
          "has_previous_page": false
        }
      }
    },
    {
      "test_id": "TC-005",
      "category": "Functional - Positive",
      "type": "Positive-Integration-CRUD",
      "description": "Request second page of results — Positive test, validates API pagination behavior",
      "endpoint": "/farmer/get_all_farmers",
      "request_params": { "page": 2 },
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response": {
        "data": ["...page 2 farmers..."],
        "meta": {
          "current_page": 2,
          "page_size": 10,
          "has_previous_page": true,
          "has_next_page": true
        }
      }
    },
    {
      "test_id": "TC-006",
      "category": "Authentication - Negative",
      "type": "Negative-Authentication-Security",
      "description": "Call API with invalid token — Negative test, validates API rejects invalid token, Authentication & Authorization, Security",
      "endpoint": "/farmer/get_all_farmers",
      "request_params": { "page": 1 },
      "auth_token": "invalid",
      "expected_status": 401,
      "expected_response": {
        "detail": "Invalid token. Expected: iXd32fC8Dv, Got: iXd32fC8Dm"
      }
    },
    {
      "test_id": "TC-007",
      "category": "Authentication - Negative",
      "type": "Negative-Authentication-Security",
      "description": "Call API with expired token — Negative test, validates API rejects expired token, Authentication & Authorization, Security",
      "endpoint": "/farmer/get_all_farmers",
      "request_params": { "page": 1 },
      "auth_token": "expired",
      "expected_status": 401,
      "expected_response": {
        "detail": "Unauthorized access. Token expired."
      }
    },
    {
      "test_id": "TC-008",
      "category": "Authentication - Negative",
      "type": "Negative-Authentication-Security",
      "description": "Call API with malformed token — Negative test, validates API rejects malformed token, Authentication & Authorization, Security",
      "endpoint": "/farmer/get_all_farmers",
      "request_params": { "page": 1 },
      "auth_token": "malformed",
      "expected_status": 401,
      "expected_response": {
        "detail": "Unauthorized access. Malformed token."
      }
    }
  ]
}
