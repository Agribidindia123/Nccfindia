{
  "base_url": "https://uat-api.nccfindia.com",
  "method": "GET",
  "headers": {
    "Content-Type": "application/json",
    "Accept": "application/json"
  },
  "tokens": {
    "valid": "iXd32fC8Dv",
    "invalid": "invalid123",
    "expired": "expired_token_example",
    "malformed": "malformed@@token",
    "empty": "",
    "valid_id": "<replace_with_id_token_here>",
    "invalid_id": "<replace_with_id_token_here>",
    "expired_id": "<replace_with_id_token_here>",
    "malformed_id": "<replace_with_id_token_here>"
  },
  "test_cases": [
    {
      "test_id": "TG-001",
      "description": "Positive - Retrieve transport service with valid ID and token",
      "category": "Positive / Data Validation",
      "endpoint": "/transport_service/get_transport_service/6b830fb6-877e-4496-8ffc-1db41c20e5a5",
      "auth_token": "valid",
      "expected_status": 200,
      "expected_response_contains": [
        "Transport service retrieved successfully",
        "transport_service_id",
        "data"
      ]
    },
    {
      "test_id": "TG-002",
      "description": "Negative - Missing Authorization header",
      "category": "Negative / Authentication",
      "endpoint": "/transport_service/get_transport_service/6b830fb6-877e-4496-8ffc-1db41c20e5a5",
      "auth_token": "empty",
      "expected_status": 401,
      "expected_error_message_substring": "Missing or invalid Authorization"
    },
    {
      "test_id": "TG-003",
      "description": "Negative - Expired Authorization token",
      "category": "Negative / Authentication",
      "endpoint": "/transport_service/get_transport_service/6b830fb6-877e-4496-8ffc-1db41c20e5a5",
      "auth_token": "expired",
      "expected_status": 401,
      "expected_error_message_substring": "Token expired"
    },
    {
      "test_id": "TG-004",
      "description": "Negative - Invalid Authorization token",
      "category": "Negative / Authentication",
      "endpoint": "/transport_service/get_transport_service/6b830fb6-877e-4496-8ffc-1db41c20e5a5",
      "auth_token": "invalid",
      "expected_status": 401,
      "expected_error_message_substring": "Invalid token"
    },
    {
      "test_id": "TG-005",
      "description": "Negative - Malformed Authorization token",
      "category": "Negative / Authentication",
      "endpoint": "/transport_service/get_transport_service/6b830fb6-877e-4496-8ffc-1db41c20e5a5",
      "auth_token": "malformed",
      "expected_status": 401,
      "expected_error_message_substring": "Invalid token"
    },
    {
      "test_id": "TG-006",
      "description": "Negative - Malformed transport_service_id",
      "category": "Negative / Input Validation",
      "endpoint": "/transport_service/get_transport_service/123-invalid-uuid",
      "auth_token": "valid",
      "expected_status": 422,
      "expected_error_message_substring": "Validation failed"
    },
    {
      "test_id": "TG-007",
      "description": "Boundary - Extremely long transport_service_id (100 chars)",
      "category": "Boundary / Input Validation",
      "endpoint": "/transport_service/get_transport_service/AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA",
      "auth_token": "valid",
      "expected_status": 422,
      "expected_error_message_substring": "Validation failed"
    },
    {
      "test_id": "TG-008",
      "description": "Negative - Non-existing transport_service_id",
      "category": "Negative / Data Validation",
      "endpoint": "/transport_service/get_transport_service/00000000-0000-0000-0000-000000000000",
      "auth_token": "valid",
      "expected_status": 404,
      "expected_error_message_substring": "No records found"
    }
  ]
}